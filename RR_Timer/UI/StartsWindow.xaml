<Window x:Class="Race_timer.UI.StartsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Race_timer.UI"
        mc:Ignorable="d"
        Title="Clock" Height="450" Width="800" WindowState="Maximized" WindowStyle="None" ShowInTaskbar="False"
        Style="{StaticResource MaterialDesignWindow}"
        Icon="/UI/onlyRmini.png" 
        ResizeMode="NoResize" IsTabStop="False">
    <Grid VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <TextBlock Grid.Row="0" x:Name="StartsNameLabel" Text="StartsNameLabel" HorizontalAlignment="Center" VerticalAlignment="Top" FontSize="{DynamicResource ControlFontSize}" Margin="0,50,0,0" TextAlignment="Center" TextWrapping="Wrap"/>
            <Label Grid.Row="1" x:Name="ParticipantStartCounterLabel" Content="ParticipantStartCounterLabel" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,-290,0,0" FontWeight="Bold" FontSize="{DynamicResource ControlClockFontSize}"/>
        </Grid>
        <Label x:Name="NextParticipantLabel" Content="NextParticipantLabel" HorizontalAlignment="Center" VerticalAlignment="Bottom" FontSize="{DynamicResource ControlSmallFontSize}" Margin="0,0,0,20"/>
    </Grid>
</Window>
